# db.o script.o 

DMAPI_DIR = ../../../dmapi
REPOS_DIR = ../../../repositories
NOTIF_DIR = ../../../notifiers
MODIF_DIR = ../../../modifiers
DATAS_DIR = ../../../datasources
EXTEN_DIR = ../../../extended

all: ../libdmapi.so

../libdmapi.so: $(DMAPI_OBJS)
	$(CXX) -shared -o $@ $(DMAPI_OBJS) -lodbc -lm -lrt -lssl -lldap
	#$(CXX) -shared -o $@ $(DMAPI_OBJS) -L$(POSTGRES_DIR)/lib -lpq -lodbc ${TRILOGYHOME}/etc/trilogyapi.so -lm -lrt


###

#
# Object files: Generic Rules
#

%.o: $(DMAPI_DIR)/%.cpp
	$(CXX) $(CXXFLAGS) $(DEBUG) -c -o $@ $< -I$(DMAPI_DIR)

%.o: $(DMAPI_DIR)/%.c
	$(CC) $(CXXFLAGS) $(DEBUG) -c -o $@ $< -I$(DMAPI_DIR)


